---
const { comics } = Astro.props
type Comic = {
  image: string
  issue: string
}
---

<div class="bg-slate-900">
  <main class="mx-auto max-w-7xl px-2 py-2 sm:px-6 sm:py-6 lg:px-8 lg:py-8">
    <ul
      role="list"
      class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3"
    >
      {
        comics?.results?.map((comic: Comic) => (
          <li class="col-span-1 flex flex-col divide-y divide-slate-400 rounded-lg bg-slate-200 shadow">
            <div>
              <img
                class="rounded-md"
                src={comic.image}
                width="560"
                height="850"
                alt={`Cover for ${comic.issue}`}
              />
              <div class="px-5 py-5">
                <div>
                  <h2 class="mb-3 font-montserrat text-lg font-medium text-stone-800">
                    {comic.issue}
                  </h2>
                </div>
              </div>
            </div>
          </li>
        ))
      }
    </ul>
  </main>
</div>
